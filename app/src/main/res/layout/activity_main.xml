<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gaode.MainActivity">

    <Button
        android:id="@+id/btn_start_diff_map_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Start Diff-Map-Activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_start_AMAP_TianDiTu_src_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_diff_map_activity"
        android:text="Start AMap-TianDiTuSrc-Activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_start_wgs84_mercator_src_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_AMAP_TianDiTu_src_activity"
        android:text="Start WGS84-MercatorSrc-Activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_start_gao_de_src_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_start_wgs84_mercator_src_activity"
        android:text="Start GaoDe-Src-Activity"
        android:textAllCaps="false" />
</android.support.constraint.ConstraintLayout>